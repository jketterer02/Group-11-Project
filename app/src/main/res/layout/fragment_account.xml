<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="681.85dp"
    android:background="@drawable/account_background"
    android:orientation="vertical"
    tools:context=".AccountFragment">


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Select your Tags: "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_btns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likelist" />

    <HorizontalScrollView
        android:id="@+id/horizontal_btns"
        android:layout_width="284dp"
        android:layout_height="73dp"
        android:layout_margin="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_out_button"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/likelist"
        app:layout_constraintVertical_bias="0.708">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="GENERAL" />

            <CheckBox
                android:id="@+id/checkbox_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Business" />

            <CheckBox
                android:id="@+id/checkbox_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Sports" />

            <CheckBox
                android:id="@+id/checkbox_tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Technology" />

            <CheckBox
                android:id="@+id/checkbox_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Health" />

            <CheckBox
                android:id="@+id/bcheckbox_entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Entertainment" />

            <CheckBox
                android:id="@+id/checkbox_science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Science" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/sign_out_button"
        android:layout_width="110dp"
        android:layout_height="64dp"
        android:layout_marginTop="312dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/sign_out_button"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/UID"
        android:layout_width="267dp"
        android:layout_height="20dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4855"
        tools:layout_conversion_absoluteHeight="29dp"
        tools:layout_conversion_absoluteWidth="371dp" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="234dp"
        android:layout_height="20dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UID"
        app:layout_constraintVertical_bias="0.143"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_conversion_absoluteWidth="371dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/pfp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:src="@drawable/default_pfp" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/likelist"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/home_like_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_marginTop="302dp"
        android:background="@drawable/blank_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exit_button"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/exit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>